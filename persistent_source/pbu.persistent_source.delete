#!/usr/bin/env bash

data_file="$HOME/.local/share/pbu_sourceable_data"
[ -f "$data_file" ] || exit

parsed=$(pflags parse --name "$(basename "$0")"  ---- -s n -l name -t string -r --regex "^[a-zA-Z0-9_-]+$" ---- "${@}") || exit
pflags printhelp "$parsed" && exit
name="$(pflags get --name name "$parsed")"

_pbu.persistent_kv delete _pbu_persistent_source_data "$name"
_pbu.persistent_kv delete _pbu_persistent_source_index "$name"
